   Text.JSON,
   HaskellNet.IMAP,
   HaskellNet.SMTP,
   HaskellNet.POP3,
   HaskellNet.HTTP,
   HaskellNet.Memcache,
   HaskellNet.BSStream,
   HaskellNet.Auth,
   HaskellNet.URI
other-modules:  Text.Packrat.Pos, Text.Packrat.Parse
ghc-options: -fglasgow-exts